<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:background="@color/separator"
    android:padding="20dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_container_order_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_buy_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Compra de Decred"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/tv_buy_unit_price_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$ 431,12"
                app:layout_constraintTop_toBottomOf="@id/tv_buy_info"
                app:layout_constraintStart_toStartOf="parent"/>

            <View
                android:id="@+id/item_order_balance_separator"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorAccent"
                app:layout_constraintTop_toBottomOf="@id/tv_buy_unit_price_value"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/tv_qtde_order_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qtde"
                app:layout_constraintTop_toBottomOf="@id/item_order_balance_separator"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:id="@+id/tv_qtde_order_balance_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4365"
                app:layout_constraintTop_toBottomOf="@id/item_order_balance_separator"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/tv_total_order_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                app:layout_constraintTop_toBottomOf="@id/tv_qtde_order_balance"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:id="@+id/tv_total_order_balance_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$ 43653,47"
                app:layout_constraintTop_toBottomOf="@id/tv_qtde_order_balance_value"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>